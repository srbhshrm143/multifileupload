{% liquid
  assign c = '{ "valid": true, "errors": {} }' | parse_json

  function c = 'lib/validations/presence', c: c, object: object, field_name: 'id'
  function c = 'lib/validations/length', c: c, object: object, field_name: 'orders', maximum: 0, message_maximum: 'app.orders.errors.item_with_orders'

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return object
%}
