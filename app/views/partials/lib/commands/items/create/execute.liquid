<!-- push to background -->
{% liquid
  graphql r= 'items/create', args: object

  if r.errors
    log r.errors, type: 'errors.graphql.invalid'

    hash_assign object['valid'] = false
    hash_assign object['errors'] = r.errors
  else
    assign object = r.model_create
    hash_assign object['valid'] = true
  endif

  return object
%}
