{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  function c = 'lib/validations/presence', c: c, object: object, field_name: 'id'
  if object.c__members_count
    function c = 'lib/validations/number', c: c, object: object, field_name: 'c__members_count', gte: 0
  endif
  if object.c__posts_count
    function c = 'lib/validations/number', c: c, object: object, field_name: 'c__posts_count', gte: 0
  endif

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return object
%}
