{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  function c = 'lib/validations/presence', c: c, object: object, field_name: 'id'
  function c = 'lib/validations/equal', c: c, given: object.status.name, expected: 'app.statuses.orders.delivered', key: 'app.orders.mark_completed.errors.invalid_status'

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return object
%}
