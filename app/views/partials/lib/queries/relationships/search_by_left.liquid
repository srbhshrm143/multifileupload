{% liquid
  if l_id == blank
    log 'Something went wrong. Left-ID cannot be blank.', type: 'ERROR'
    return null
  endif

  assign limit = limit | default: 100
  graphql r = 'relationships/search', limit: limit, name: name, l_id: l_id, r_id: r_id, include_related: include_related, model: model

  return r.records
%}
