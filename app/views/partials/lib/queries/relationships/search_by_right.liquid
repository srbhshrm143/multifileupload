{% liquid
  if r_id == blank
    log 'Something went wrong. Right-ID cannot be blank.', type: 'ERROR'
    return null
  endif

  if name == blank
    log 'Something went wrong. Name cannot be blank.', type: 'ERROR'
    return null
  endif

  graphql r = 'relationships/search', limit: 100, name: name, l_id: l_id, r_id: r_id, include_related: include_related, model: model, accepted: accepted, approved: approved
  return r.records
%}
