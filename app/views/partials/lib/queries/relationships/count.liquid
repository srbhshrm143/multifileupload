{% liquid
  if l_id == blank and r_id == blank
    log "ERROR: no left and right, you must pass one"
    return null
  endif

  graphql r = 'relationships/count', limit: 1, name: name, l_id: l_id, r_id: r_id, model: model
  include 'lib/handle_graphql_response', r: r, name: 'queries/relationships/count'

  return r.records
%}
