{% liquid
  function profile = 'lib/queries/profiles/find', id: event.object.id
  function object = 'lib/commands/authentication_links/create', email: profile.user.email, host: context.location.host

  function group = 'lib/queries/groups/find', id: event.target.id
  hash_assign object['group'] = group

  function member = 'lib/queries/profiles/find', id: event.actor.id
  hash_assign object['member'] = member

  function email = 'lib/commands/emails/group_invite', object: object
%}
