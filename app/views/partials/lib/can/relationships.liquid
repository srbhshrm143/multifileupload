{% liquid
  case do

  when 'delete'
    if actor.id == relationship.l_id
      return true
    endif

    assign owner = context.relationships.owner | detect: r_id: relationship.r_id, l_id: actor.id
    if owner
      return true
    else
      return false
    endif

  when 'create'
    if relationship.name == 'wishlist' and actor.id == relationship.l_id
      return true
    endif

    if relationship.name != 'wishlist'
      return true
    endif

  else
    return false
  endcase
%}
