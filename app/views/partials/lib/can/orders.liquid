{% liquid
  assign can = false

  case do
  when 'return_line_items'
    if actor.id != order.buyer.id
      return false
    endif

    assign status = order.status.name
    if status == 'app.statuses.orders.delivered' or status == 'app.statuses.orders.completed'
      return true
    endif
  endcase

  return can
%}
