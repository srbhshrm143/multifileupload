<h1 class="pagetitle"> Update Room </h1>

{%liquid
  graphql show_rooms = 'venue_rooms/show' | fetch: "models"
  assign rooms = show_rooms | fetch: "results"
%}

{% for room in rooms %}
  {% if room.id == context.params.id %}
  <!-- {{ room }} -->
    <div class="card-lg w-full md:w-96 mx-auto">
      <form action="/venue_rooms/updated" method="POST">
        <input type="hidden" name="venue_id" class="venue_id" id="venue_id" value="{{ room.properties.venue_id }}">
        <input type="hidden" name="room_id" value="{{ room.id }}">
        <div class="mt-3">
          <label for="room_name"> Room Name : </label>
          <input type="text" name="room_name" id="room_name" class="room_name" value="{{ room.properties.room_name }}">
        </div>
        <!-- <div class="mt-3">
          <label for="room_media"> Room Media : </label>
          <input type="file" name="room_media" id="room_media" class="room_media" value="{{ room.properties.room_media }}">
        </div> -->
        <div class="mt-3">
          <button class="button mt-3"> Update Room </button>
        </div>
      </form>
    </div>
    <!-- {{ room }}<br> -->
  {% endif %}
{% endfor %}
