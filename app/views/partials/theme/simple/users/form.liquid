  <div class="w-full h-full sm:flex sm:h-full md:flex relative items-center justify-start">
    <div
      class="lg:w-1/2 md:w-1/2 md:mx-0 sm:w-full sm:w-full lg:h-screen xs:h-auto sm:relative sm:z-10 sm:bg-white sm:w-4/5 sm:flex sm:items-center sm:justify-center sm:mx-auto sm:my-8 ">
      <div class="py-3 px-2 flex items-center sm:px-6 sm:w-full sm:h-full md:h-screen xs:h-full ">
        <div class="pb-10 sm:py-3 sm:w-full lg:max-w-lg md:px-3 lg:p-0 m-auto">
          <div>
            <img class="w-auto mx-0 h-12 sm:w-40 sm:h-auto md:w-48 lg:w-56 xl:w-80" src="{{ 'images/event-hound/logo.png' | asset_url }}"
              alt="Workflow">
            <h2
              class="pt-7 text-left text-3xl tracking-tight font-semibold font-Work sm:text-base md:text-lg lg:text-3xl xl:text-4xl sm:pt-2 text-blackColor">
              {{ "Create Account" }}
            </h2>
            <p
              class="sm:pt-1 md:pt-1 pt-4 text-left text-sm text-gray-600 font-Work lg:text-base xl:text-xl sm:text-xs text-paragraphTextColor">
              {{ "Register by adding the following details" }}
            </p>
          </div>
          <form class="mt-8 space-y-6 sm:mt-3" action="/users" method="POST">

            {% include 'authenticity_token' %}
            <input name="profile[language]" type="hidden" value="{{context.language}}">
            <input type="hidden" name="profile[user__type]" id="user_type" class="user_type" value="customer">
            <input type="hidden" name="profile[uuid]" value="{{ object_uuid }}">
            <input type="hidden" name="user[agreed]" id="agreed" value="on">

            <!-- <input type="hidden" name="remember" value="true"> -->

            <div>
              <div class="flex flex-wrap">
                <div
                  class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pr-1.5 sm:mb-3 ">
                  <label for="firstName"
                    class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                    {{ "First Name" }}
                    <span class="text-themeBlue">*&nbsp;
                    </span>
                  </label>
                  <div class="relative">
                    <input id="firstName" name="profile[first_name]" type="text" autocomplete="firstName"
                    required
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="john"
                    value="{{ object.first_name | raw_escape_string }}">
                    {% include 'theme/simple/field_error', errors: object.errors.first_name %}
                  </div>

                </div>
                <div
                  class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pl-1.5">
                  <label for="lastName"
                    class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                    {{ "Last Name" }}
                    <span class="text-themeBlue">*&nbsp;
                    </span>
                  </label>
                  <div class="relative">
                    <input id="lastName" name="profile[last_name]" type="text"
                      required
                      class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                      placeholder="Doe"
                      value="{{ object.last_name | raw_escape_string }}">
                      {% include 'theme/simple/field_error', errors: object.errors.last_name %}
                  </div>
                </div>
                {%- comment -%}
                {%- endcomment -%}
                <div
                  class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pr-1.5">
                  <label for="phoneNumber"
                    class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                    {{ "Phone Number" }}
                    <span class="text-themeBlue">*&nbsp;
                    </span>
                  </label>
                  <div class="relative">
                    <input id="phoneNumber" name="profile[phoneNumber]" type="number" autocomplete="phoneNumber"
                      required
                      class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                      placeholder="9876543210"
                      value="{{ object.user__mobile | raw_escape_string }}">
                      {% include 'theme/simple/field_error', errors: object.errors.phoneNumber %}
                  </div>
                </div>
                <div
                  class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pl-1.5">
                  <label for="ReferralCode"
                    class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                    {{ "Referral Code" }}
                    </span>
                  </label>
                  <div class="relative">
                    <input id="ReferralCode" name="profile[ReferralCode]" type="number"
                      autocomplete="ReferralCode"
                      class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                      placeholder="12345"
                      value="{{ object.ReferralCode | raw_escape_string }}">
                      {% include 'theme/simple/field_error', errors: object.errors.ReferralCode %}
                  </div>
                </div>

              </div>
              <div class="rounded mb-6 relative">
                <label for="email-address"
                  class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                  {{ "Email address" }}
                  <span class="text-themeBlue">*&nbsp;
                  </span>
                </label>
                <div class="relative">
                  <input id="email-address" name="user[email]" type="email" autocomplete="email" required
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="john.doe@gmail.com"
                    value="{{ object.email | raw_escape_string }}">
                  <img class="absolute z-10 right-3 md:w-5 top-2/4 -translate-y-1/2" src="{{ 'images/event-hound/check-icon.png' | asset_url }}" />
                  {% include 'theme/simple/field_error', errors: object.errors.email %}
                </div>
              </div>
              <div class="rounded mb-6 relative">
                <label for="password"
                  class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">Enter
                  {{ "Password" }}
                  <span class="text-themeBlue">*&nbsp;
                  </span>
                </label>
                <div class="relative">
                  <input id="password" name="user[password]" type="password" autocomplete="current-password"
                    required
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="John@123"
                    value="{{ object.password | raw_escape_string }}">
                  <img class="absolute z-10 right-3 md:w-5 top-2/4 -translate-y-1/2" src="{{ 'images/event-hound/eye-hide.png' | asset_url }}" onclick="showPass();" id="pass_click"/>
                  {% include 'theme/simple/field_error', errors: object.errors.password %}
                </div>
              </div>
            </div>
            
            {%- comment -%}
              <div class="flex items-start">
                <input id="remember_me"
                  name="profile[remember_me]"
                  type="checkbox"
                  value="{{ object.remember_me | raw_escape_string }}"
                  class="form-checkbox rounded h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded mt-1 font-Work">
                <label for="remember_me"
                  class="ml-2 block text-sm text-gray-900 text-base font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                  {{ "Send me email
                  updates with contests, news and
                  promotions. You can unsubsribe at any time." }}
                </label>
              </div>
            {%- endcomment -%}
              
            <div>
              <button type="submit"
                id="signup"
                class="w-full rounded-3xl flex justify-center py-3 px-2 border font-medium text-white bg-themeBlue hover:bg-themeBlue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 text-base uppercase font-Work sm:text-sm lg:text-sm xl:text-lg md:font-medium sm:p-3 lg:py-3.5 xl:py-3">
                {{ "SIGN up" }}
              </button>
            </div>

            <div
              class="text-center xs:relative sm:relative md:fixed md:bottom-5 xl:fixed xl:bottom-5 sm:w-full md:m-auto lg:max-w-lg flex justify-center max-xxl:static ">
              <p class="sm:text-xs lg:text-sm xl:text-lg md:font-medium font-Work ">
                {{ "Already have an account?" }}
                <a class="text-themeBlue font-Work md:font-semibold "
                  href="/sessions/new">
                    {{ "Login" }}
                </a>
              </p>
            </div>
              
          </form>
        </div>
      </div>
    </div>
    <div class="md:fixed md:w-1/2 sm:w-full fixed sm:fixed xs:relative top-0 right-0 h-screen xs:h-auto">
      <img class="mx-auto h-screen w-full xs:h-screen absolute top-0 right-0 object-cover"
        src="{{ 'images/event-hound/signup-image.jpg' | asset_url }}" />
    </div>
  </div>