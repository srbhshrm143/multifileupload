<div class="overflow-x-auto relative">
  <div class="border border-borderColor sm:px-3 sm:py-4 md:px-7 md:py-8 rounded-md">
    <div class="sm:text-lg md:text-xl xl:text-2xl font-semibold font-Work md:pb-2 xl:pb-3">
      {{ "Pricing" }}
    </div>
    <p class="sm:text-xs md:text-base font-normal font-Work text-black">
      {{ "Please Upload your Food and Bar
      menus to the descriptions that best match your venue's offerings, or type in your own menu titles
      below." }}
    </p>
    <div class=""> 
      <form class="mt-8 space-y-6 sm:mt-3 pb-3" action="/venue/venue_pricing/{{action}}" method="POST">
        <input type="hidden" name="event_pricing[venue_id]" id="venue__id" value="{{ context.params.venue_id }}">
        <input type="hidden" name="event_pricing[menu_id]" id="venue__id" value="{{ context.params.menuId }}">
        <div class="py-4 mb-4">
          <div class="sm:block md:flex w-full ">
            <div class="sm:w-full md:w-1/2">
              <label for="email-address"
                class="flex text-base mb-1 font-Work sm:text-sm lg:text-md font-medium text-blackColor">
                {{ "Weekdays" }}
                <button data-tooltip-target="tooltip-animation2" data-tooltip-placement="bottom"
                  type="button"
                  class="mb-2 md:mb-0 text-black text-center ml-2 flex h-full items-center font-medium font-Work whitespace-nowrap text-base sm:text-sm">
                  <img class="pr-1 " src="{{ 'images/event-hound/icon-1.png' | asset_url }}" />
                </button>
              </label>
              <div id="tooltip-animation2" role="tooltip"
                class="max-w-xs inline-block absolute invisible z-10 py-2 px-3 text-sm font-medium font-Work text-black bg-white rounded-lg border border-gray-200 shadow-sm duration-300 opacity-0 tooltip">
                Monday, Tuesday, <br />
                Wednesday, Thursday
                <div class="tooltip-arrow " data-popper-arrow></div>
              </div>
              <div class="sm:block md:flex items-center w-full gap-x-5 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
                <label for="Address"
                  class="md:w-24 text-base block mb-1 font-Work sm:text-sm lg:text-md md:font-medium text-blackColor sm:text-center">Morning</label>
                <div class="">
                  <input id="Address" name="event_pricing[weekdays_morning]" type="test" autocomplete="address" 
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="$289"
                    value="{{ object.weekdays_morning | raw_escape_string }}" required>
                </div>
              </div>
              <div class="sm:block md:flex items-center w-full gap-x-5 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
                <label for="Address"
                  class="md:w-24 text-base block mb-1 font-Work sm:text-sm lg:text-md md:font-medium text-blackColor sm:text-center">Day</label>
                <div class="">
                  <input id="Address" name="event_pricing[weekdays_day]" type="text" autocomplete="address" 
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="$289"
                    value="{{ object.weekdays_day | raw_escape_string }}">
                </div>
              </div>
              <div class="sm:block md:flex items-center w-full gap-x-5 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
                <label for="Address"
                  class="md:w-24 text-base block mb-1 font-Work sm:text-sm lg:text-md md:font-medium text-blackColor sm:text-center">Night</label>
                <div class="">
                  <input id="Address" name="event_pricing[weekdays_night]" type="text" autocomplete="address" 
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="$289"
                    value="{{ object.weekdays_night | raw_escape_string }}">
                </div>
              </div>
              <div class="sm:block md:flex items-center w-full gap-x-5 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
                <label for="Address"
                  class="md:w-24 text-base block mb-1 font-Work sm:text-sm lg:text-md md:font-medium text-blackColor sm:text-center">All
                  All Day</label>
                <div class="">
                  <input id="Address" name="event_pricing[weekdays_allday]" type="text" autocomplete="address" 
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="$289"
                    value="{{ object.weekdays_all_day | raw_escape_string }}">
                </div>
              </div>
            </div>
            <div class="sm:w-full md:w-1/2">
              <label for="email-address"
                class="flex text-base mb-1 font-Work sm:text-sm lg:text-md font-medium text-blackColor">
                {{ "Weekend" }}
                <button data-tooltip-target="tooltip-animation1" data-tooltip-placement="bottom"
                  type="button"
                  class="mb-2 md:mb-0 text-black text-center ml-2 flex h-full items-center font-medium font-Work whitespace-nowrap text-base sm:text-sm">
                  <img class="pr-1 " src="{{ 'images/event-hound/icon-1.png' | asset_url }}" />
                </button>
              </label>
              <div id="tooltip-animation1" role="tooltip"
                class="max-w-xs inline-block absolute invisible z-10 py-2 px-3 text-sm font-medium font-Work text-black bg-white rounded-lg border border-gray-200 shadow-sm duration-300 opacity-0 tooltip">
                Monday, Tuesday, <br />
                Wednesday, Thursday
                <div class="tooltip-arrow " data-popper-arrow></div>
              </div>
              <div class="sm:block md:flex items-center w-full gap-x-5 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
                <label for="Address"
                  class="md:w-24 text-base block mb-1 font-Work sm:text-sm lg:text-md md:font-medium text-blackColor sm:text-center">Morning</label>
                <div class="">
                  <input id="Address" name="event_pricing[weekends_morning]" type="text" autocomplete="address" 
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="$289"
                    value="{{ object.weekend_morning | raw_escape_string }}">
                </div>
              </div>
              <div class="sm:block md:flex items-center w-full gap-x-5 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
                <label for="Address"
                  class="md:w-24 text-base block mb-1 font-Work sm:text-sm lg:text-md md:font-medium text-blackColor sm:text-center">Day</label>
                <div class="">
                  <input id="Address" name="event_pricing[weekends_day]" type="text" autocomplete="address" 
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="$289"
                    value="{{ object.weekdays_day | raw_escape_string }}">
                </div>
              </div>
              <div class="sm:block md:flex items-center w-full gap-x-5 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
                <label for="Address"
                  class="md:w-24 text-base block mb-1 font-Work sm:text-sm lg:text-md md:font-medium text-blackColor sm:text-center">Night</label>
                <div class="">
                  <input id="Address" name="event_pricing[weekends_night]" type="text" autocomplete="address" 
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="$289"
                    value="{{ object.weekend_night | raw_escape_string }}">
                </div>
              </div>
              <div class="sm:block md:flex items-center w-full gap-x-5 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
                <label for="Address"
                  class="md:w-24 text-base block mb-1 font-Work sm:text-sm lg:text-md md:font-medium text-blackColor sm:text-center">All
                  All Day</label>
                <div class="">
                  <input id="Address" name="event_pricing[weekends_allday]" type="text" autocomplete="address" 
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="$289"
                    value="{{ object.weekend_all_day | raw_escape_string }}">
                </div>
              </div>
            </div>
          </div>
        </div>
          <div class="">
            <div class="sm:text-lg md:text-xl xl:text-2xl font-semibold font-Work md:pb-2 xl:pb-3">Availability
            </div>
            <p class="sm:text-xs md:text-sm font-normal font-Work text-black mb-2">Non Available Dates</p>
            <div class="relative sm:w-full md:w-1/2">
              {% assign dates = object.non_available_dates | split: '-' %}
              {% assign non_dates = dates | reverse | join: "-" %}
              <input datepicker datepicker-format="mm/dd/yyyy" type="text"
                class="rounded-3xl bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-3 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                placeholder="07/23/2022"
                name="event_pricing[available_dates]"
                value="{{ non_dates | raw_escape_string }}">
                
                <div class="flex absolute inset-y-0 right-0 items-center pr-3 pointer-events-none">
                  <svg aria-hidden="true" class="w-5 h-5 text-themeBlue dark:text-gray-400" fill="currentColor"
                    viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                      d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                      clip-rule="evenodd">
                    </path>
                  </svg>
                </div>
            </div>
            <div class="w-full md:text-right mt-2">
              <button type="button"
                class="text-themeBlue rounded-3xl bg-white border border-themeBlue uppercase hover:themeBlue-500 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mt-2 focus:outline-none">
                {{ "previous" }}
              </button>
              <button type="submit"
                class="text-white rounded-3xl bg-themeBlue uppercase hover:themeBlue-500 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mt-2 focus:outline-none">
                {{ "save and continue" }}
              </button>
            </div>
          </div>
      </form>
    </div>
  </div>
</div>