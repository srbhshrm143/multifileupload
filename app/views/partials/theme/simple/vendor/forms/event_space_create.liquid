{%liquid
  assign event_space_uuid = '' | uuid
%}

<div class="overflow-x-auto relative">
  <div class="border border-borderColor sm:px-3 sm:py-4 md:px-7 md:py-8 rounded-md">
    <div class="sm:text-lg md:text-xl xl:text-2xl font-semibold font-Work md:pb-2 xl:pb-3">
      {{ "Add Event Space" }}
    </div>
    <p class="sm:text-sm md:text-base md:mb-6 xl:mb-9">
      {{ "Do you have separate event space for use within the same venue? Please upload each event space individually. If you just
      have the one space for use, do not fill in Event Space Name. Lorem Ipsum is simply dummy text of the printing." }}
    </p>

    <form class="" action="/venue/event_create/create" method="POST">
      <input type="hidden" name="event_space[venue_id]" id="venue__id" value="{{ context.params.venue_id }}">
      <input type="hidden" name="event_space[uuid]" value="{{ event_space_uuid }}">
      <div class="w-full">
        <input type="hidden" name="event_space[action]" value="{{ action }}">
        <input type="hidden" name="event_space[id]" value="{{ id }}">
        <div class="w-full">
          <div class="rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
            <label for="Address"
              class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md font-medium text-blackColor">
              {{ "Event Space Name" }}
              <span class="text-themeBlue">*&nbsp;</span>
            </label>
            <div class="relative">
              <input id="Address" name="event_space[space_name]" type="text" autocomplete="address" 
                class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                placeholder="Block 23, Alberta, Canada"
                value="{{ object.event_space_name | raw_escape_string }}" required>
            </div>
          </div>
        </div>
        <div class="pb-3">
          <label for="email-address"
            class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md font-medium text-blackColor">
            {{ "Type of Suitable Event" }}
            <span class="text-themeBlue">*&nbsp;</span>
          </label>
          <div class="md:flex sm:block gap-x-8 rounded-3xl px-3 py-3 border">
            
            <div
              class="sm:w-full md:w-1/2 appearance-none relative block placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg sm:mb-2">

              <div class="relative flex w-full">
                <select
                  id="select-role"
                  name="event_space[category]"
                  multiple
                  placeholder="Select category..."
                  autocomplete="off"
                  class="block w-full rounded-sm cursor-pointer focus:outline-none itemss"
                  multiple
                >
                {% for event_space_type in category_gql.categories.results %}
                  <option value="{{event_space_type.category_name}}" {% if object.event_type == event_space_type.category_name %} selected {% endif %}>
                    {{event_space_type.category_name}}
                  </option>
                {% endfor %}
                </select>
              </div>

            </div>
            <div class="sm:w-full md:w-1/2 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
              <input id="Wedding" name="event_space[categorye]" type="corprate" autocomplete="corprate" 
              class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg relative"
              placeholder="Enter Here">
              <button class="absolute top-2 right-5" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="30" viewBox="0 0 16 30">
                <text id="_" data-name="+" transform="translate(0 24)" font-size="26" font-family="WorkSans-Bold, Work Sans" font-weight="700">
                  <tspan x="0" y="0">+</tspan>
                </text>
              </svg>
            </button>
            </div>
          </div>
        </div>
        <div class="md:flex sm:block gap-x-8">
          <div class="sm:w-full md:w-1/2 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
            <label for="number"
              class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md font-medium text-blackColor">
              {{ "Minimum Event Space Capacity" }}
              <span class="text-themeBlue">*&nbsp;</span>
            </label>
            <div class="relative">
              <input id="number" name="event_space[min_space_capacity]" type="number" autocomplete="number" 
                class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                placeholder="8694 46445"
                value="{{ object.minimum_event_capacity | raw_escape_string }}">
            </div>
          </div>
          <div class="sm:w-full md:w-1/2 rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
            <label for="name"
              class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md font-medium text-blackColor">
              {{ "Maximum Event Space Capacity" }}
              <span class="text-themeBlue">*&nbsp;</span>
            </label>
            <div class="relative">
              <input id="name" name="event_space[max_space_capacity]" type="name" autocomplete="name" 
                class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                placeholder="Sunshine"
                value="{{ object.maximum_event_capacity | raw_escape_string }}">
            </div>
          </div>
        </div>
        <div class="w-full">
          <div class="rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
            <label for="phoneNumber"
              class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md font-medium text-blackColor">
              {{ "Write About Your Event Space" }}
              <span class="text-themeBlue">*&nbsp;</span>
            </label>

            <textarea id="message" rows="4" name="event_space[space_about_msg]"
              class="block p-2.5 w-full text-sm text-black bg-white rounded-3xl border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="Your message..."
              >{{ object.write_about_event-space | raw_escape_string }}</textarea>
          </div>
        </div>
        <div class="pb-3">
          <label for="email-address"
            class="flex text-base mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
            {{ "Included Amenities" }}
            <span class="text-themeBlue">*&nbsp;</span>
            <button data-tooltip-target="tooltip-animation" data-tooltip-placement="bottom" type="button"
              class="mb-2 md:mb-0 text-black text-center ml-2 flex h-full items-center font-medium font-Work whitespace-nowrap text-base sm:text-sm">
              <img class="pr-1 " src="{{ 'images/vendor/icon-1.png' | asset_url }}" />
            </button>
          </label>
          <div class="md:flex sm:block gap-x-8 rounded-3xl px-3 py-3 border">
            <div
              class="sm:w-full md:w-1/2 appearance-none relative block placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg sm:mb-2">
              <select
                  id="select-roles"
                  name="event_space[included_amenities]"
                  multiple
                  placeholder="Select Amenities..."
                  autocomplete="off"
                  class="block w-full rounded-sm cursor-pointer focus:outline-none itemss"
                  multiple
                >
                <option value="1">Option 1</option>
                <option value="2">Option 2</option>
                <option value="3">Option 3</option>
                <option value="4">Option 4</option>
                <option value="5">Option 5</option>
                <option value="6">Option 6</option>
                <option value="7">Option 7</option>
                <option value="8">Option 8</option>
          </select>

            </div>
            <div class="sm:w-full md:w-full rounded md:mb-3 xl:mb-6 sm:mb-3 relative">
              <input id="Wedding" name="event_space[included_amenities]" type="corprate" autocomplete="corprate" 
                class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg relative"
                placeholder="Enter Here">
                <button class="absolute top-2 right-5" type="button">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="30" viewBox="0 0 16 30">
                  <text id="_" data-name="+" transform="translate(0 24)" font-size="26" font-family="WorkSans-Bold, Work Sans" font-weight="700"><tspan x="0" y="0">+</tspan></text>
                </svg>
              </button>
            </div>
          </div>

          <div id="tooltip-animation" role="tooltip"
            class="max-w-xs inline-block absolute invisible z-10 py-2 px-3 text-sm font-medium font-Work text-primaryFieldBlue bg-white rounded-lg border border-gray-200 shadow-sm duration-300 opacity-0 tooltip">
            {{ "These include only the free amenities for your venue. Please, do not put any paid amenities" }}
            <div
              class="tooltip-arrow " data-popper-arrow>
            </div>
          </div>
        </div>
        <div class="w-full">
          <label for="email-address"
            class="flex text-base mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
            {{ "Images/Videos Upload" }}
            <span class="text-themeBlue">*&nbsp;</span>
            <button data-tooltip-target="tooltip-animation" data-tooltip-placement="bottom" type="button"
              class="mb-2 md:mb-0 text-black text-center ml-2 flex h-full items-center font-medium font-Work whitespace-nowrap text-base sm:text-sm">
              <img class="pr-1 " src="{{ 'images/vendor/icon-1.png' | asset_url }}" /></button>
          </label>
            <div>
              {%- comment -%} Contract Media {%- endcomment -%}
              <div class="space_media flex">
                {% for space_media in space_image %}
                  {% if space_media.media.extension == "jpg" or space_media.media.extension == "png" or space_media.media.extension == "webp"   %}
                      <img src="{{ space_media.media.url }}" alt="contract_img" width="200" height="100">
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            <div>
              {% render 'theme/simple/forms/upload_media_field' %}
            </div>
          <div class="">
            {%- comment -%}
              <div class="flex w-full overflow-x-auto">
                <label for="dropzone-file"
                  class="flex flex-col justify-center items-center mt-2 w-36 h-32 bg-gray-50 rounded-lg border-2 border-gray-300 border-dashed cursor-pointer dark:hover:bg-bray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600 mr-2 min-w-40">
                  <div class="flex flex-col justify-center items-center pt-2 pb-3 text-center">
                    <p class="font-semibold text-xs text-gray-500 dark:text-gray-400 pb-2">{{ "Cover Photo" }}</p>
                    <img src="{{ 'images/vendor/upload-image.png' | asset_url }}" />
                    <p class="text-xs text-gray-500 dark:text-gray-400 pt-2">
                      {{ "Upload image/video" }}
                    </p>
                    <p class="font-semibold text-xs text-gray-500 dark:text-gray-400">
                      {{ "(.png, .jpg, .MP4)" }}
                    </p>
                  </div>
                  <input id="dropzone-file" type="file" class="hidden" />
                </label>
                <div class="mr-4 relative">
                  <img class="w-36 h-full pt-2" src="{{ 'images/vendor/upload-1.jpg' | asset_url }}">
                  <span class="absolute z-10 -right-2 -top-0"><img src="{{ 'images/vendor/upload-cross.jpg' | asset_url }}"></span>
                </div>
                <div class="mr-4 relative">
                  <img class="w-36 h-full pt-2" src="{{ 'images/vendor/upload-2.jpg' | asset_url }}">
                  <span class="absolute z-10 -right-2 -top-0"><img src="{{ 'images/vendor/upload-cross.jpg' | asset_url }}"></span>
                </div>
                <div class="mr-4 relative">
                  <img class="w-36 h-full pt-2" src="./images/upload-1.jpg">
                  <span class="absolute z-10 -right-2 -top-0"><img src="./images/upload-cross.png"></span>
                </div>

              </div>
            {%- endcomment -%}
          </div>
        </div>
        <div class="w-full md:text-right mt-2">
          <button type="button"
            class="text-themeBlue rounded-3xl bg-white border border-themeBlue uppercase hover:themeBlue-500 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mt-2 focus:outline-none">previous</button>
          <button type="submit"
            class="text-white rounded-3xl bg-themeBlue uppercase hover:themeBlue-500 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mt-2 focus:outline-none">save
            and continue</button>
        </div>
      </div>
      </form>
    {% render 'theme/simple/forms/upload_presigned_url', photo__type: 'event_space_media', max__files: '3', uuid: event_space_uuid %}
  </div>
</div>
