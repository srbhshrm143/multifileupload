<div class="w-full h-full sm:flex sm:h-full md:flex relative items-center justify-start">
  <div
    class="lg:w-1/2 md:w-1/2 md:mx-0 sm:w-full lg:h-screen xs:h-auto sm:relative sm:z-10 sm:bg-white sm:w-4/5 sm:flex sm:items-center sm:justify-center sm:mx-auto sm:my-8 ">
    <div class="py-3 px-2 flex items-center sm:px-6 sm:w-full sm:h-full md:h-screen xs:h-full ">
      <div class="pb-10 sm:py-3 sm:w-full lg:max-w-lg md:px-3 lg:p-0 m-auto">
        <div>
          <img class="w-auto mx-0 h-12 sm:w-40 sm:h-auto md:w-48 lg:w-56 xl:w-80"
            src="{{ 'images/vendor/logo.png' | asset_url }}"
            alt="Workflow">
          <h2
            class="pt-7 text-left text-3xl tracking-tight font-semibold font-Work sm:text-base md:text-lg lg:text-3xl xl:text-4xl sm:pt-2 text-blackColor">
            {{ "Welcome to
            EventHounds" }}
          </h2>
          <p
            class="sm:pt-1 md:pt-1 pt-4 text-left text-sm text-gray-600 font-Work lg:text-base xl:text-xl sm:text-xs text-paragraphTextColor">
            {{ "Vendor Sign In" }}
          </p>
        </div>
        <form class="mt-8 space-y-6 sm:mt-3 pb-3" action="/sessions/create" method="POST">
          {% render 'authenticity_token', context: context %}
          {% render 'theme/simple/field_error', errors: object.errors.base %}
          <input type="hidden" name="remember" value="true">
          <div>
            <div class="rounded mb-6 sm:mb-3 relative">
              <label for="email-address"
                class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                {{ "Email
                address" }}
                <span class="text-themeBlue">*&nbsp;</span>
              </label>
              <div class="relative">
                <input id="email-address" name="user[email]" type="email" autocomplete="email" required
                  class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                  placeholder="mail@website.com"
                  onblur="ValidateEmail();">
                <img class="absolute z-10 right-3 md:w-5 top-2/4 -translate-y-1/2"
                  src="{{ 'images/vendor/check-icon.png' | asset_url }}"  id="email_field_icon"/>
                  {% render 'theme/simple/field_error', errors: object.errors.email %}
                  <p id="email_Invalid" class="">{{ "invalid email address”, “Use Email like:- example@test.com" }}</p>
              </div>
            </div>
            <div class="rounded mb-7.5 sm:mb-3 relative">
              <label for="password"
                class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                {{ "Password" }}
                <span class="text-themeBlue">*&nbsp;</span>
              </label>
              <div class="relative">
                <input id="login_password" name="user[password]" type="password" autocomplete="current-password"
                  required
                  class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                  placeholder="John123"
                  onblur="validatePassword();">
                <img class="absolute z-10 right-3 md:w-5 top-2/4 -translate-y-1/2"
                  src="{{ 'images/vendor/eye-icon.png' | asset_url }}" onclick="showPass();" id="pass_click"/>
                  {% render 'theme/simple/field_error', errors: object.errors.password %}
                  <p id="password_Invalid">
                    <span id="min__six__char">{{ "Minimum six characters,"}}</span>
                    <span id="upper__case">{{ "one uppercase letter,"}}</span>
                    <span id="lower__case">{{ "one lowercase letter,"}}</span>
                    <span id="special__char">{{ "one special character" }}</span>
                    {{ "and" }}
                    <span id="one__number">{{ "one number" }}</span>
                  </p>
                  <p id="password_minSixChar"> {{ "Minimum six characters" }} </p>
              </div>

            </div> 
          </div>
          
          <div class="sm:block md:flex sm:items-start items-center justify-between">
            <div class="flex items-center sm:items-start ">
              <input id="remember-me" name="remember-me" type="checkbox"
                class="sm:mt-1 h-4 w-4 text-themeBlue focus:ring-themeBlue border-themeBlue rounded">
              <label for="remember-me"
                class="ml-2 block text-sm text-gray-900 text-base font-Work sm:text-sm lg:sm xl:text-lg">
                {{ "Remember me" }}
              </label>
            </div>
            
            <div class="text-sm sm:text-left sm:mt-2 md:mt-0 md:text-right ">
              <a href="/vendor/forget-password"
                class="font-medium text-linkColor hover:text-linkColor-600 text-base font-Work sm:text-sm lg:sm xl:text-lg">
                {{ "Forgot your password?" }}
              </a>
            </div>
          </div>
          
          <div>
            <button type="submit"
              class="w-full rounded-3xl flex justify-center py-3 px-2 border font-medium text-white bg-themeBlue hover:bg-themeBlue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 text-base uppercase font-Work sm:text-sm lg:text-sm xl:text-lg md:font-medium sm:p-3 lg:py-3.5 xl:py-3"
              id="login_btn">
              {{ "Login" }}
            </button>
          </div>
          
          <div class="flex items-center justify-center ">
            <span class="border borderColor w-full"></span>
            <p class="bg-white px-2 font-Work sm:text-sm md:text-base">
              {{ "OR" }}
            </p>
            <span class="border borderColor w-full"></span>
          </div>
          
          <div>
            <button type="submit"
              class="border rounded-3xl mb-4 border-gray-300 group relative w-full flex justify-center py-3 px-2 text-sm font-medium text-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 flex items-center text-base font-Work sm:text-sm lg:text-sm xl:text-lg sm:py-2 lg:py-3 xl:py-4">
              <img class="mr-2 md:w-6 md:h-6 sm:w-4 sm:h-4"
                src="{{ 'images/vendor/google-icon.png' | asset_url }}" />
              {{ "CONTINUE
              WITH GOOGLE" }}
            </button>
            <button type="submit"
              class="border rounded-3xl border-gray-300 group relative w-full flex justify-center py-4 px-2 font-medium text-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 flex items-center text-base font-Work sm:text-sm lg:text-sm xl:text-lg sm:py-2 lg:py-3 xl:py-4">
              <img class="mr-2 md:w-6 md:h-6 sm:w-4 sm:h-4"
                src="{{ 'images/vendor/facebook-icon.png' | asset_url }}" />
                {{ "CONTINUE
                WITH FACEBOOK" }}
            </button>
          </div>
          <div
            class="text-center xs:relative sm:relative md:fixed md:bottom-5 xl:fixed xl:bottom-5 sm:w-full md:m-auto lg:max-w-lg flex justify-center max-xxl:static ">
            <p class="sm:text-xs lg:text-sm xl:text-lg md:font-medium font-Work ">
              {{ "New to EventHounds?" }}
              <a
                class="text-themeBlue font-Work md:font-semibold "
                href="/vendor/sign_up">
                {{ "Sign up!" }}
              </a>
            </p>
          </div>
          
        </form>
      </div>
    </div>
  </div>
  <div class="md:fixed md:w-1/2 sm:w-full fixed sm:fixed xs:relative top-0 right-0 h-screen xs:h-auto ">
    <img class="mx-auto h-screen w-full xs:h-screen absolute top-0 right-0 object-cover"
      src="{{ 'images/vendor/login.png' | asset_url }}" />
  </div>
</div>