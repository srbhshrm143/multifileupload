{%liquid

  assign uuid = '' | uuid
%}

<div class="w-full h-full sm:flex sm:h-full md:flex relative items-center justify-start">
  <div
    class="lg:w-1/2 md:w-1/2 md:mx-0 sm:w-full sm:w-full lg:h-screen xs:h-auto sm:relative sm:z-10 sm:bg-white sm:w-4/5 sm:flex sm:items-center sm:justify-center sm:mx-auto sm:my-8 ">
    <div class="py-3 px-2 flex items-center sm:px-6 sm:w-full sm:h-full md:h-screen xs:h-full ">
      <div class="pb-10 sm:py-3 sm:w-full lg:max-w-lg md:px-3 lg:p-0 m-auto">
        <div>
          <img class="w-auto mx-0 h-12 sm:w-40 sm:h-auto md:w-48 lg:w-56 xl:w-80"
           src="{{ 'images/vendor/logo.png' | asset_url }}"
            alt="Workflow">
          <h2
            class="pt-7 text-left text-3xl tracking-tight font-semibold font-Work sm:text-base md:text-lg lg:text-3xl xl:text-4xl sm:pt-2 text-blackColor">
            {{ "Create Account" }}
          </h2>
          <p
            class="sm:pt-1 md:pt-1 pt-4 text-left text-sm text-gray-600 font-Work lg:text-base xl:text-xl sm:text-xs text-paragraphTextColor">
            {{ "Vendor Sign Up" }}
          </p>
        </div>
        <form class="mt-8 space-y-6 sm:mt-3 pb-3" action="/users" method="POST">
          {% include 'authenticity_token' %}
          <input name="profile[language]" type="hidden" value="{{context.language}}">
          <input type="hidden" name="profile[user__type]" id="user_type" class="user_type" value="venue_owner">
          <input type="hidden" name="profile[uuid]" value="{{ uuid }}">
          <input type="hidden" name="user[agreed]" id="agreed" value="on">

          <input type="hidden" name="remember" value="true">
          <div>
            <div class="flex flex-wrap">
              <div
                class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pr-1.5">
                <label for="company_name"
                  class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                  {{ "Company Name" }}
                  <span class="text-themeBlue">*&nbsp;</span>
                </label>
                <div class="relative">
                  <input id="company_name" name="profile[company_name]" type="text"
                    autocomplete="company_name"
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="Sunshine Group"
                    value="{{ object.company_name | raw_escape_string }}" required>
                    {% include 'theme/simple/field_error', errors: object.errors.company_name %}
                </div>
              </div>
              <div
                class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pl-1.5">
                <label for="company_phoneNumber"
                  class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                  {{ "Company Phone Number" }}
                  <span class="text-themeBlue">*&nbsp;</span>
                </label> 
                <div class="relative">
                  <input id="company_phoneNumber" name="profile[company_phoneNumber]" type="number"
                    autocomplete="company_phoneNumber"
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="8578 8557"
                    value="{{ object.company_phoneNumber | raw_escape_string }}" required>
                    {% include 'theme/simple/field_error', errors: object.errors.company_phoneNumber %}
                </div>
              </div>
              <div
                class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pr-1.5 sm:mb-3 ">
                <label for="fistName"
                  class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor flex">
                  {{ "Contact Person First Name" }}
                  <span class="text-themeBlue">*&nbsp;</span>
                  <button data-tooltip-target="tooltip-animation2" data-tooltip-placement="bottom"
                    type="button"
                    class="mb-2 md:mb-0 text-black text-center  flex h-full items-center font-medium font-Work whitespace-nowrap text-base sm:text-sm">
                    <img class="pr-1 "
                      src="{{ 'images/vendor/icon-1.png' | asset_url }}" />
                  </button>
                </label>
                <div id="tooltip-animation2" role="tooltip"
                  class="max-w-xs inline-block absolute invisible z-10 py-2 px-3 text-sm font-normal font-Work text-primaryFieldBlue bg-white rounded-lg border border-gray-200 shadow-sm duration-300 opacity-0 tooltip">
                  {{ "This name is for EventHounds staff use only and will not be publicly displayed on your venue" }}
                  <div class="tooltip-arrow " data-popper-arrow></div>
                </div>
                <div class="relative">
                  <input id="firstName" name="profile[first_name]" type="text" autocomplete="firstName"
                   
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="John"
                    value="{{ object.first_name | raw_escape_string }}" required>
                    {% include 'theme/simple/field_error', errors: object.errors.first_name %}
                </div>
              </div>
              <div
                class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pl-1.5">
                <label for="lastName"
                  class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                  {{ "Contact Last Name" }}
                  <span class="text-themeBlue">*&nbsp;</span>
                </label>
                <div class="relative">
                  <input id="lastName" name="profile[last_name]" type="text" autocomplete="lastName"
                   
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="Deo"
                    value="{{ object.last_name | raw_escape_string }}" required>
                    {% include 'theme/simple/field_error', errors: object.errors.last_name %}
                </div>
              </div>
              <div
                class="xl:w-2/2 lg:w-2/2 md:w-2/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pr-1.5">
                <label for="email-address"
                  class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                  {{ "Email
                  Address" }}
                  <span class="text-themeBlue">*&nbsp;</span>
                </label>
                <div class="relative">
                  <input id="email-address" name="user[email]" type="email" autocomplete="email"
                   
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="john.doe@gmail.com">
                  <img class="absolute z-10 right-3 md:w-5 top-2/4 -translate-y-1/2"
                    src="{{ 'images/vendor/check-icon.png' | asset_url }}" />
                  {% include 'theme/simple/field_error', errors: object.errors.email %}
                </div>
              </div>
              
              <div
                class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pl-1.5">
                <label for="login_password"
                  class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                  {{ "Enter Password" }}
                  <span class="text-themeBlue">*&nbsp;</span>
                </label>
                <div class="relative">
                  <input id="login_password" name="user[password]" type="password"
                    autocomplete="password"
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="John123"
                    value="{{ object.password | raw_escape_string }}" required>
                  <img class="absolute z-10 right-3 md:w-5 top-2/4 -translate-y-1/2"
                    src="{{ 'images/vendor/eye-icon.png' | asset_url }}" onclick="showPass();" id="pass_click"/>
                    {% include 'theme/simple/field_error', errors: object.errors.password %}
                </div>
              </div>
              <div
                class="xl:w-1/2 lg:w-1/2 md:w-1/2 xs:w-full sm:w-full xs-w-full rounded mb-6 relative pl-1.5">
                <label for="enterConfirmPassword"
                  class="text-base block mb-1 font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                  {{ "Confirm Password" }}
                  <span class="text-themeBlue">*&nbsp;</span>
                </label>
                <div class="relative">
                  <input id="enterConfirmPassword" name="password" type="password"
                    autocomplete="password"
                    class="rounded-3xl appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-themeBlue-500 focus:border-themeBlue-500 focus:z-10 text-lg font-Work sm:text-sm lg:sm xl:text-lg"
                    placeholder="John123">
                  <img class="absolute z-10 right-3 md:w-5 top-2/4 -translate-y-1/2"
                    src="{{ 'images/vendor/eye-icon.png' | asset_url }}" onclick="showPass();" id="pass_click"/>
                  {% include 'theme/simple/field_error', errors: object.errors.password %}
                </div>
              </div>
              
              <div class="sm:block md:flex sm:items-start items-center justify-between mb-4">
                <div class="flex items-center sm:items-start ">
                  <p>
                    <span class="text-themeBlue">*&nbsp;</span>
                    {{ "This information is for EventHounds staff use only and will not be publicly displayed on your venue" }}
                  </p>
                </div>
              </div>
              
              
              <div class="sm:block md:flex sm:items-start items-center justify-between mb-4">
                <div class="flex items-center sm:items-start ">
                  <input id="remember-me" name="profile[above18]" type="checkbox"
                    class="sm:mt-1 h-4 w-4 text-themeBlue focus:ring-themeBlue border-themeBlue rounded">
                  <label for="remember-me"
                    class="ml-2 block text-sm text-gray-900 text-base font-Work sm:text-sm lg:sm xl:text-lg">
                    {{ "Please confirm if you are above 18?" }}
                  </label>
                </div>
              </div>
            </div>
            
            <!-- <div class="flex items-start">
                <input id="remember-me" name="remember-me" type="checkbox"
                    class="form-checkbox rounded h-4 w-4 text-themeBlue-600 focus:ring-themeBlue-500 border-gray-300 rounded mt-1 font-Work">
                <label for="remember-me"
                    class="ml-2 block text-sm text-gray-900 text-base font-Work sm:text-xs md:text-sm lg:text-md md:font-medium text-blackColor">
                    Send me email
                    updates with contests, news and
                    promotions. You can unsubsribe at any time.
                </label>
            </div> -->

            <div>
              <button type="submit"
                id="signup"
                class="w-full rounded-3xl flex justify-center py-3 px-2 border font-medium text-white bg-themeBlue hover:bg-themeBlue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 text-base uppercase font-Work sm:text-sm lg:text-sm xl:text-lg md:font-medium sm:p-3 lg:py-3.5 xl:py-3">
                {{ "SIGN up" }}
              </button>
            </div>
            
            <div
            class="text-center xs:relative sm:relative md:fixed md:bottom-2 xl:fixed xl:bottom-2 sm:w-full md:m-auto lg:max-w-lg flex justify-center max-xxl:static ">
            <p class="sm:text-xs lg:text-sm xl:text-lg md:font-medium font-Work ">
              {{ "Already have an account?" }}
              <a class="text-themeBlue font-Work md:font-semibold "
                href="/vendor/vendor_sign-in">
                {{ "Login" }}
              </a>
            </p>
          </div>
          
        </form>
      </div>
    </div>
  </div>
  <div class="md:fixed md:w-1/2 sm:w-full fixed sm:fixed xs:relative top-0 right-0 h-screen xs:h-auto ">
    <img class="mx-auto h-screen w-full xs:h-screen absolute top-0 right-0 object-cover"
      src="{{ 'images/vendor/signup.png' | asset_url }}" />
  </div>
</div>