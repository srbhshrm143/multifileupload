<!-- {{ context }} -->

{%liquid graphql read_gql = "venue/read" | fetch: "models"
  assign read_data = read_gql | fetch: "results"
%}


<!-- {{ read_data }} -->

<h1 class="pagetitle"> Venue Update </h1>
{% for data in read_data %}
  {% if data.id == context.params.id %}
    <!-- {{ data.id }} -->
    <form action="/venue/updated" method="POST" class="card-lg w-full md:w-96 mx-auto">
      <input type="hidden" value="{{ data.id }}" name="venue_id">
      <!-- Venue name -->
      <div>
        <h1 class="text-3xl mb-3 font-bold text-center"> Venue Id : {{ data.id }} </h1>
      </div>
      <div class="mt-3">
        <label for="{{ 'app.venue.fields.name_id' | t }}"> {{ 'app.venue.fields.name' | t }} </label>
        <input type="text" name="{{ 'app.venue.fields.name_id' | t }}" id="{{ 'app.venue.fields.name_id' | t }}" class="venue_name w-full form-input-small" value="{{ data.properties.venue_name }}">
      </div>
      <div class="mt-3">
        <label for="{{ 'app.venue.fields.address_id' | t }}">{{ 'app.venue.fields.address' | t }}</label>
        <textarea name="{{ 'app.venue.fields.address_id' | t }}" id="{{ 'app.venue.fields.address_id' | t }}" cols="30" rows="3" class="venue_address w-full form-input-small" value="{{ data.properties.venue_address }}">{{ data.properties.venue_address }}</textarea>
      </div>
      <div class="mt-3">
        <label for="{{ 'app.venue.fields.contact_id' | t }}"> {{ 'app.venue.fields.contact' | t }} </label>
        <input type="text" name="{{ 'app.venue.fields.contact_id' | t }}" id="{{ 'app.venue.fields.contact_id' | t }}" class="venue_contact w-full form-input-small" value="{{ data.properties.venue_contact }}">
      </div>
      <div class="mt-3">
        <label for="{{ 'app.venue.fields.services_id' | t }}"> {{ 'app.venue.fields.services_offred' | t }} </label>
        <input type="text" name="{{ 'app.venue.fields.services_id' | t }}" id="{{ 'app.venue.fields.services_id' | t }}" class="services_offered w-full form-input-small" value="{{ data.properties.venue_services }}">
      </div>
      <div class="mt-3">
        <label for="{{ 'app.venue.fields.menu_id' | t }}"> {{ 'app.venue.fields.menu' | t }} </label>
        <input type="text" name="{{ 'app.venue.fields.menu_id' | t }}" id="{{ 'app.venue.fields.menu_id' | t }}" class="venue_menu w-full form-input-small" value="{{ data.properties.venue_menu }}">
      </div>
      <div class="mt-3">
        <label for="{{ 'app.venue.fields.features_id' | t }}"> {{ 'app.venue.fields.features' | t }} </label>
        <input type="text" name="{{ 'app.venue.fields.features_id' | t }}" id="{{ 'app.venue.fields.features_id' | t }}" class="venue_features w-full form-input-small" value="{{ data.properties.venue_features }}">
      </div>
      <div class="mt-3">
        <label for="{{ 'app.venue.fields.desc_id' | t }}"> {{ 'app.venue.fields.desc' | t }} </label>
        <textarea type="text" name="{{ 'app.venue.fields.desc_id' | t }}" id="{{ 'app.venue.fields.desc_id' | t }}" cols="30" rows="3" class="w-full form-input-small" value="{{ data.properties.venue_description }}"> {{ data.properties.venue_description }} </textarea>
      </div>
      <div class="mt-3">
        <label for="{{ 'app.venue.fields.capacity_id' | t }}"> {{ 'app.venue.fields.capacity' | t }} </label>
        <input type="text" name="{{ 'app.venue.fields.capacity_id' | t }}" id="{{ 'app.venue.fields.capacity_id' | t }}" class="w-full form-input-small" value="{{ data.properties.venue_capacity }}">
      </div>
      <div class="mt-3">
        <label for="{{ 'app.venue.fields.hours_id' | t }}"> {{ 'app.venue.fields.rental_hours' | t }} </label>
        <input type="text" name="{{ 'app.venue.fields.hours_id' | t }}" id="{{ 'app.venue.fields.hours_id' | t }}" class="w-full form-input-small" value="{{ data.properties.venue_rental_hours }}">
      </div>
      {%- comment -%}
        <div class="mt-3">
          <label for="{{ 'app.venue.fields.contract_id' | t }}"> {{ 'app.venue.fields.contract' | t }} </label>
          <input type="text" name="{{ 'app.venue.fields.contract_id' | t }}" id="{{ 'app.venue.fields.contract_id' | t }}" class="w-full form-input-small">
        </div>
        <div class="mt-3">
          <label for="{{ 'app.venue.fields.media_id' | t }}"> {{ 'app.venue.fields.media_img' | t }} </label>
          <input type="file" name="{{ 'app.venue.fields.media_id' | t }}" id="{{ 'app.venue.fields.media_id' | t }}" class="w-full form-input-small" accept="image/jpeg">
          <!-- <input type="file" name="{{ 'app.venue.fields.media_id' | t }}" id="{{ 'app.venue.fields.media_id' | t }}" class="w-full form-input-small" accept="image/*"> -->
        </div>
      {%- endcomment -%}
    <button class="button button-small mt-3">Update Venue</button>
    <a href="/venue/show" class="button button-small mt-3"> Show Venues </a>
    </form>
  {% endif %}
{% endfor %}