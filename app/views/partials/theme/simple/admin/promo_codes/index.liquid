<header class="mb-6 -mx-8 px-8 pb-7 flex justify-between gap-8 border-b">
  <h2 class="title flex items-center gap-4">
    {% render 'theme/simple/ui/icon', icon: 'discountCoupon', class: 'w-6 relative top-0.5 text-content-sidenote' %}
    {{ 'admin.navigation.promo_codes' | t }}
  </h2>

  <div class="flex gap-4">
    <div class="pe-4 border-frame text-center">
      <strong class="subtitle leading-tight">{{ promo_codes.total_entries }}</strong>
      <div class="sidenote">{{ 'app.admin.promo_codes.title' | t }}</div>
    </div>
  </div>
</header>

<form action="" id="admin-form"></form>

<div class="flex min-h-screen">

  <div class="w-full">

    <nav class="mb-4 flex items-center justify-end">
      <a href="/admin/promo_codes/new" class="button button-small">
        {{ 'app.admin.promo_codes.list.add' | t }}
        {% render 'theme/simple/ui/icon', icon: 'plus' %}
      </a>
    </nav>

    {% if promo_codes.total_entries > 0 %}

      {% render 'theme/simple/promo_codes/list', promo_codes: promo_codes, context: context, namespace: 'admin' %}
      {% liquid
        assign page = page | default: 1 | plus: 0
      %}
      {% render 'theme/simple/ui/pagination', form: 'admin-form' collection: promo_codes, current_page: filters.page %}

    {% else %}

      {% render 'theme/simple/admin/promo_codes/empty', context: context %}

    {% endif %}
  </div>
</div>
