{% comment %}
  Define email addresses of users who should have Admin access. Use comma to separate multiple users, for example

    constant_set(name: "superadmins", value: "admin@example.com,admin2@example.com")

{% endcomment %}

{% graphql r %}
mutation set_constants {
  superadmins: constant_set(name: "superadmins", value: "admin@example.com"){
    name
    value
  }
}
{% endgraphql %}
{% log r, type: 'migrations/set_superadmins' %}
